@model MasLazu.AspNet.EmailSender.Abstraction.Models.EmailMessage
@{
    var options = Model.RenderOptions ?? new MasLazu.AspNet.EmailSender.Abstraction.Models.EmailRenderOptions();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Subject</title>
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap');
        
        body {
            margin: 0;
            padding: 0;
            font-family: 'Open Sans', Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333333;
            line-height: 1.8;
        }
        
        .email-container {
            max-width: 600px;
            margin: 20px auto;
            background-color: #ffffff;
            border-radius: 0;
            overflow: hidden;
            box-shadow: none;
            border: 1px solid #e0e0e0;
        }
        
        .email-header {
            background-color: #ffffff;
            padding: 30px;
            text-align: left;
            border-bottom: 2px solid #f0f0f0;
        }
        
        .email-header h1 {
            margin: 0;
            font-size: 24px;
            font-weight: 600;
            color: #2c3e50;
        }
        
        .email-content {
            padding: 30px;
            background-color: #ffffff;
        }
        
        .email-content h1 {
            color: #2c3e50;
            font-size: 22px;
            margin-bottom: 20px;
            font-weight: 600;
            border-bottom: 2px solid #ecf0f1;
            padding-bottom: 10px;
        }
        
        .email-content h2 {
            color: #34495e;
            font-size: 18px;
            margin-bottom: 15px;
            font-weight: 600;
        }
        
        .email-content p {
            margin-bottom: 16px;
            font-size: 15px;
            color: #555555;
        }
        
        .email-content a {
            color: #3498db;
            text-decoration: underline;
        }
        
        .email-content a:hover {
            color: #2980b9;
        }
        
        .button {
            display: inline-block;
            padding: 12px 24px;
            background-color: #3498db;
            color: white !important;
            text-decoration: none;
            border-radius: 4px;
            font-weight: 600;
            text-transform: none;
            border: 2px solid #3498db;
            transition: all 0.3s ease;
        }
        
        .button:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }
        
        .parameters-section {
            margin-top: 25px;
            padding: 20px;
            background-color: #f8f9fa;
            border: 1px solid #e9ecef;
            border-radius: 4px;
        }
        
        .parameters-section h3 {
            color: #2c3e50;
            margin-top: 0;
            font-weight: 600;
            font-size: 16px;
        }
        
        .email-footer {
            background-color: #f8f9fa;
            padding: 20px 30px;
            text-align: center;
            border-top: 1px solid #e9ecef;
        }
        
        .footer-text {
            margin: 0;
            font-size: 13px;
            color: #6c757d;
            line-height: 1.4;
        }
        
        @@media (max-width: 600px) {
            .email-container {
                margin: 0;
                border-radius: 0;
                border-left: none;
                border-right: none;
            }
            
            .email-header, .email-content, .email-footer {
                padding: 20px 15px;
            }
            
            .email-content h1 {
                font-size: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="email-header">
            @if (!string.IsNullOrEmpty(options.CompanyName))
            {
                <div class="company-name">@options.CompanyName</div>
            }
            <h1>@Model.Subject</h1>
        </div>
        
        <div class="email-content">
            @if (!string.IsNullOrEmpty(Model.BodyTemplate))
            {
                @Html.Raw(Model.BodyTemplate)
            }
            else
            {
                @Html.Raw(Model.Body)
            }
            
            @if (Model.Parameters?.Any() == true)
            {
                <div class="parameters-section">
                    <h3>Additional Information</h3>
                    @foreach (var parameter in Model.Parameters)
                    {
                        <p><strong>@parameter.Key:</strong> @parameter.Value</p>
                    }
                </div>
            }
        </div>
        
        <div class="email-footer">
            <p class="footer-text">
                This email was sent automatically. Please do not reply to this email.<br>
                Â© @DateTime.Now.Year @(options.CompanyName ?? "Your Company"). All rights reserved.
            </p>
        </div>
    </div>
</body>
</html>
