@model MasLazu.AspNet.EmailSender.Abstraction.Models.EmailMessage
@{
    var options = Model.RenderOptions ?? new MasLazu.AspNet.EmailSender.Abstraction.Models.EmailRenderOptions();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Subject</title>
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap');
        
        body {
            margin: 0;
            padding: 0;
            font-family: 'Roboto', sans-serif;
            background-color: #121212;
            color: #ffffff;
            line-height: 1.6;
        }
        
        .email-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #1e1e1e;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        }
        
        .email-header {
            background: linear-gradient(135deg, #667eea, #764ba2);
            padding: 40px 30px;
            text-align: center;
            color: white;
        }
        
        .email-header h1 {
            margin: 0;
            font-size: 32px;
            font-weight: 300;
            text-shadow: 0 2px 4px rgba(0,0,0,0.2);
        }
        
        .email-content {
            padding: 40px 30px;
            background-color: #1e1e1e;
        }
        
        .email-content h1 {
            color: #667eea;
            font-size: 28px;
            margin-bottom: 20px;
            font-weight: 500;
        }
        
        .email-content h2 {
            color: #8b94ff;
            font-size: 22px;
            margin-bottom: 15px;
            font-weight: 400;
        }
        
        .email-content p {
            margin-bottom: 15px;
            font-size: 16px;
            color: #e0e0e0;
        }
        
        .email-content a {
            color: #667eea;
            text-decoration: none;
            border-bottom: 1px solid transparent;
            transition: border-bottom-color 0.3s ease;
        }
        
        .email-content a:hover {
            border-bottom-color: #667eea;
        }
        
        .button {
            display: inline-block;
            padding: 14px 28px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white !important;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
            transition: all 0.3s ease;
        }
        
        .button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
        }
        
        .parameters-section {
            margin-top: 30px;
            padding: 25px;
            background-color: #2a2a2a;
            border-radius: 10px;
            border-left: 4px solid #667eea;
        }
        
        .parameters-section h3 {
            color: #667eea;
            margin-top: 0;
            font-weight: 500;
        }
        
        .email-footer {
            background-color: #0a0a0a;
            padding: 25px 30px;
            text-align: center;
            border-top: 1px solid #333333;
        }
        
        .footer-text {
            margin: 0;
            font-size: 12px;
            color: #888888;
        }
        
        @@media (max-width: 600px) {
            .email-container {
                margin: 0;
                border-radius: 0;
            }
            
            .email-header, .email-content, .email-footer {
                padding: 20px 15px;
            }
            
            .email-content h1 {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
    <div class="email-container">
        <div class="email-header">
            @if (!string.IsNullOrEmpty(options.CompanyName))
            {
                <div class="company-name">@options.CompanyName</div>
            }
            else
            {
                <h1>@Model.Subject</h1>
            }
        </div>
        
        <div class="email-content">
            @if (!string.IsNullOrEmpty(Model.BodyTemplate))
            {
                @Html.Raw(Model.BodyTemplate)
            }
            else
            {
                @Html.Raw(Model.Body)
            }
            
            @if (Model.Parameters?.Any() == true)
            {
                <div class="parameters-section">
                    <h3>Details</h3>
                    @foreach (var parameter in Model.Parameters)
                    {
                        <p><strong>@parameter.Key:</strong> @parameter.Value</p>
                    }
                </div>
            }
        </div>
        
        <div class="email-footer">
            <p class="footer-text">This is an automated message.</p>
            <p class="footer-text">Â© @DateTime.Now.Year @(options.CompanyName ?? "Your Company"). All rights reserved.</p>
        </div>
    </div>
</body>
</html>
