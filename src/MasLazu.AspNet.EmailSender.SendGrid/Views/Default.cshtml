@model MasLazu.AspNet.EmailSender.Abstraction.Models.EmailMessage
@{
    var options = Model.RenderOptions ?? new MasLazu.AspNet.EmailSender.Abstraction.Models.EmailRenderOptions();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Subject</title>
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap');
        
        body {
            margin: 0;
            padding: 0;
            font-family: @options.FontFamily;
            background-color: #f4f4f4;
            color: @options.TextColor;
            line-height: 1.6;
        }
        
        .email-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: @options.BackgroundColor;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        
        .email-header {
            background: linear-gradient(135deg, @options.PrimaryColor, @options.SecondaryColor);
            padding: 30px;
            text-align: center;
            color: white;
        }
        
        .email-header h1 {
            margin: 0;
            font-size: 28px;
            font-weight: 300;
        }
        
        .logo {
            max-height: 60px;
            margin-bottom: 15px;
        }
        
        .company-name {
            margin: 0;
            font-size: 24px;
            font-weight: bold;
        }
        
        .email-content {
            padding: 40px 30px;
        }
        
        .email-content h1 {
            color: @options.PrimaryColor;
            font-size: 28px;
            margin-bottom: 20px;
        }
        
        .email-content h2 {
            color: @options.PrimaryColor;
            font-size: 22px;
            margin-bottom: 15px;
        }
        
        .email-content p {
            margin-bottom: 15px;
            font-size: 16px;
        }
        
        .email-content a {
            color: @options.PrimaryColor;
            text-decoration: none;
        }
        
        .email-content a:hover {
            text-decoration: underline;
        }
        
        .button {
            display: inline-block;
            padding: 12px 24px;
            background: linear-gradient(135deg, @options.PrimaryColor, @options.SecondaryColor);
            color: white !important;
            text-decoration: none;
            border-radius: 6px;
            font-weight: 500;
            transition: transform 0.2s ease;
        }
        
        .button:hover {
            transform: translateY(-2px);
        }
        
        .parameters-section {
            margin-top: 30px;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 8px;
            border-left: 4px solid @options.PrimaryColor;
        }
        
        .parameters-section h3 {
            color: @options.PrimaryColor;
            margin-top: 0;
        }
        
        .email-footer {
            background-color: #f8f9fa;
            padding: 20px 30px;
            text-align: center;
            border-top: 1px solid #e9ecef;
        }
        
        .social-links {
            margin-bottom: 15px;
        }
        
        .social-link {
            display: inline-block;
            margin: 0 10px;
            padding: 8px 16px;
            background-color: @options.PrimaryColor;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            font-size: 14px;
        }
        
        .social-link:hover {
            opacity: 0.8;
        }
        
        .footer-text {
            margin: 0;
            font-size: 12px;
            color: @options.SecondaryColor;
        }
        
        @@media (max-width: 600px) {
            .email-container {
                margin: 0;
                border-radius: 0;
            }
            
            .email-header, .email-content, .email-footer {
                padding: 20px 15px;
            }
            
            .email-content h1 {
                font-size: 24px;
            }
            
            .social-link {
                display: block;
                margin: 5px 0;
            }
        }
    </style>
</head>
<body>
    <div class="email-container">
        @if (!string.IsNullOrEmpty(options.LogoUrl) || !string.IsNullOrEmpty(options.CompanyName))
        {
            <div class="email-header">
                @if (!string.IsNullOrEmpty(options.LogoUrl))
                {
                    <img src="@options.LogoUrl" alt="Logo" class="logo" />
                }
                @if (!string.IsNullOrEmpty(options.CompanyName))
                {
                    <div class="company-name">@options.CompanyName</div>
                }
                else
                {
                    <h1>@Model.Subject</h1>
                }
            </div>
        }
        
        <div class="email-content">
            @if (!string.IsNullOrEmpty(Model.BodyTemplate))
            {
                @Html.Raw(Model.BodyTemplate)
            }
            else
            {
                @Html.Raw(Model.Body)
            }
            
            @if (Model.Parameters?.Any() == true)
            {
                <div class="parameters-section">
                    <h3>Additional Information</h3>
                    @foreach (var parameter in Model.Parameters)
                    {
                        <p><strong>@parameter.Key:</strong> @parameter.Value</p>
                    }
                </div>
            }
        </div>
        
        @if (!string.IsNullOrEmpty(options.FooterText) || (options.IncludeSocialLinks && options.SocialLinks.Any()))
        {
            <div class="email-footer">
                @if (options.IncludeSocialLinks && options.SocialLinks.Any())
                {
                    <div class="social-links">
                        @foreach (var link in options.SocialLinks)
                        {
                            <a href="@link.Value" class="social-link">@link.Key</a>
                        }
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(options.FooterText))
                {
                    <p class="footer-text">@options.FooterText</p>
                }
                else
                {
                    <p class="footer-text">This email was sent automatically. Please do not reply to this email.</p>
                    <p class="footer-text">Â© @DateTime.Now.Year Your Company. All rights reserved.</p>
                }
            </div>
        }
    </div>
</body>
</html>
